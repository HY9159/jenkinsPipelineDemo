pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello from github-hook trigger.'
            }
        }
        stage('build') {
            steps {
                echo 'building'
            }
        }
        stage('deploy') {
            steps {
                echo 'deploying'
                withCredentials([[
                    $class: 'AmazonWebServicesCredentialsBinding',
                    credentialsId: 'myaws',
                    accessKeyVariable: 'AWS_ACCESS_KEY_ID',
                    secretKeyVariable: 'AWS_SECRET_ACCESS_KEY']]){
                        sh(script: 'aws s3 cp /var/lib/jenkins/workspace/jenkinsPipeline/index.html s3://test-env-jenkins-yoshida/')
                    }
            }
        }
        stage('test') {
            steps {
                echo 'testing'
                script {
                    def url = 'https://test-env-jenkins-yoshida.s3.us-west-1.amazonaws.com/index.html'
                    def response = sh(script: "curl -s -o /dev/null -w '%{http_code}' '$url'", returnStdout: true)

                    if (response == '200') {
                        echo 'Test OK'
                    } else {
                        echo response
                        error 'Test NG'
                    }
                }
            }
        }
        stage('release') {
            steps {
                echo 'releasing'
                withCredentials([[
                    $class: 'AmazonWebServicesCredentialsBinding',
                    credentialsId: 'myaws',
                    accessKeyVariable: 'AWS_ACCESS_KEY_ID',
                    secretKeyVariable: 'AWS_SECRET_ACCESS_KEY']]){
                        sh(script: 'aws s3 cp /var/lib/jenkins/workspace/jenkinsPipeline/index2.html s3://prod-env-jenkins-yoshida/')
                }
            }
        }
    }
}
